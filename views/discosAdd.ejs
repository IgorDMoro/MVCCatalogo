<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar Disco</title>
    <link rel="stylesheet" href="/css/discosAdd.css">
</head>
<body>
    <header>
        <nav>
          <div class="logo">
            <img src="\images\logoatt.png" alt="logo" class="imagem-link" id="imagem-link">
        </div>
        <script>
          document.getElementById('imagem-link').addEventListener('click', function(){
            window.location.href="/";
          });
        </script>
            <a href="/"><i class="homepage"></i> Home</a>
            <a href="/artistas"><i class="fa-solid fa-user"></i> Artistas</a>
            <a href="/discos"><i class="fas fa-record-vinyl"></i> Discos</a>
            <a href="/faixas"><i class="fas fa-music"></i> Faixas</a>
            <a href="/generos"><i class="fas fa-tags"></i> Gêneros</a>
            <!-- Formulário de busca -->
            <form action="/busca" method="get" style="display: inline-block; margin-left: 20px;">
              <input 
                  type="text" 
                  name="q" 
                  placeholder="Buscar por título, artista ou gênero" 
                  style="padding: 5px; border: 1px solid #ccc; border-radius: 4px;"
              >
              <button 
                  type="submit" 
                  style="padding: 5px 10px; background-color: #333; color: white; border: none; border-radius: 4px; cursor: pointer;"
              >
                  Buscar
              </button>
          </form>
        </nav>
    </header>
<div class="form-add">
    <form action="/discos/add" method="POST" enctype="multipart/form-data">
      <label for="titulo">Título do Disco</label>
      <input type="text" id="titulo" name="titulo" required>
    
      <label for="ano_lancamento">Ano de Lançamento</label>
      <input type="number" id="ano_lancamento" name="ano_lancamento" placeholder="Ex: 2024" required>
    
      <label for="capa">Capa do Disco</label>
      <input type="file" id="capa" name="capa" accept="image/*" required>
    
      <label for="faixas">Faixas</label>
      <div id="faixas">
        <div class="faixa">
          <input type="text" name="faixas[]" placeholder="Título da Faixa" required>
    
          <!-- Seleção de gêneros para cada faixa -->
          <div class="generos-select">
            <select name="faixaGeneros[]" id="genero">
              <option value="">Escolha um gênero</option>
              <% generos.forEach((genero) => { %>
                <option value="<%= genero.id %>"><%= genero.nome %></option>
              <% }) %>
            </select>
          </div>
        </div>
      </div>
    
      <button type="button" onclick="addFaixa()">Adicionar Faixa</button>
      <button type="submit">Adicionar Disco</button>
    </form>
  </div>
    <script>
      function addFaixa() {
        const faixasContainer = document.getElementById('faixas');
        const newFaixa = document.createElement('div');
        newFaixa.classList.add('faixa');
    
        newFaixa.innerHTML = `
          <input type="text" name="faixas[]" placeholder="Título da Faixa" required>
    
          <!-- Seleção de gêneros para cada nova faixa -->
          <div class="generos-select">
            <select name="faixaGeneros[]" id="genero">
              <option value="">Escolha um gênero</option>
              <% generos.forEach((genero) => { %>
                <option value="<%= genero.id %>"><%= genero.nome %></option>
              <% }) %>
            </select>
          </div>
        `;
    
        faixasContainer.appendChild(newFaixa); // Adiciona a nova faixa ao container
      }
    </script>    
      <footer>
        <a href="/" class="voltas"
            ><i class="volta"></i> Voltar ao Menu Inicial</a
          >
        </footer>

</body>
</html>