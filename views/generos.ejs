<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gêneros</title>
    <link rel="stylesheet" href="css/generos.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gugi&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="images/logo-favico.png" type="image/x-icon">
</head>
<body>
    <header>
        <div class="logo">
            <a href="/"><img src="/images/logo.png" alt="BraunBeat Logo"></a>
        </div>
        <nav>
            <a href="/artistas"><i class="fa-solid fa-user"></i> Artistas</a>
            <a href="/discos"><i class="fas fa-record-vinyl"></i> Discos</a>
            <a href="/faixas"><i class="fas fa-music"></i> Faixas</a>
            <a href="/generos"><i class="fas fa-tags"></i> Gêneros</a>
        </nav>
    </header>

    <div class="genres-container">
        <a href="/generos/add" class="add-genre-button"><i class="fas fa-plus-circle"></i> Adicionar Gênero</a>

        <div class="genres-list">
            <% generos.forEach(function(genero) { %>
                <div class="genre-item">
                    <button class="genre-name">
                        <%= genero.nome %>
                    </button>
                    <div class="genre-options">
                        <button class="edit-genre" onclick="window.location.href='/generos/edit/<%= genero.id %>'">
                            <i class="fas fa-edit"></i> Editar
                        </button>
                        <button class="delete-genre" onclick="window.location.href='/generos/delete/<%= genero.id %>'">
                            <i class="fas fa-trash"></i> Excluir
                        </button>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>


</body>
</html>