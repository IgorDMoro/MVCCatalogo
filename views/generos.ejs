<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gêneros</title>
    <link rel="stylesheet" href="css/generos.css"/>
    <link rel="icon" type="image/x-icon" href="/images/ondas-sonoras.ico">
  </head>
  <body>
    <header>
      <nav>
        <div class="logo">
          <img src="\images\logoatt.png" alt="logo" class="imagem-link" id="imagem-link">
      </div>
      <script>
        document.getElementById('imagem-link').addEventListener('click', function(){
          window.location.href="/";
        });
      </script>
        <a href="/"><i class="homepage"></i> Home</a>
        <a href="/artistas"><i class="fa-solid fa-user"></i> Artistas</a>
        <a href="/discos"><i class="fas fa-record-vinyl"></i> Discos</a>
        <a href="/faixas"><i class="fas fa-music"></i> Faixas</a>
        <a href="/generos"><i class="fas fa-tags"></i> Gêneros</a>
        <!-- Formulário de busca -->
        <form action="/busca" method="get" style="display: inline-block; margin-left: 20px;">
          <input 
              type="text" 
              name="q" 
              placeholder="Buscar por título, artista ou gênero" 
              style="padding: 5px; border: 1px solid #ccc; border-radius: 4px;"
          >
          <button 
              type="submit" 
              style="padding: 5px 10px; background-color: #333; color: white; border: none; border-radius: 4px; cursor: pointer;"
          >
              Buscar
          </button>
      </form>
      </nav>
    </header>

    <div class="genres-container">
      <a href="/generos/add" class="add-genre-button"
        ><i class="fas fa-plus-circle"></i> Adicionar Gênero</a
      >

      <div class="genres-list">
        <% generos.forEach(function(genero) { %>
        <div class="genre-item">
          <button class="genre-name"><%= genero.nome %></button>
          <div class="genre-options">
            <form
            action="/generos/<%= genero.id %>/edit"
            method="GET"
            class="edit-genre-form"
          >
            <button class="edit-genre">
              <i class="fas fa-edit"></i> Editar
            </button>
          </form>
            <form
              action="/generos/<%= genero.id %>?_method=DELETE"
              method="POST"
              class="delete-genre-form"
              onsubmit="return confirm('Tem certeza que deseja excluir este gênero?');"
            >
              <button class="delete-genre">
                <i class="fas fa-trash"></i> Excluir
              </button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <footer>
      <a href="/" class="voltas"
        ><i class="volta"></i> Voltar ao Menu Inicial</a
      >
    </footer>
  </body>
</html>
